<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="36dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="#EB001B"
        app:cardCornerRadius="6dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="14dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="6dp"
        app:cardElevation="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relUpcom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/back_doctype">

                <TextView
                    android:id="@+id/textViewDoctorTypeRowUpcom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#00BDD0"
                    android:textSize="12sp"
                    tools:text="Терапевт" />

            </RelativeLayout>

            <TextView
                android:id="@+id/doctorNameTextViewUpcom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12sp"
                android:layout_toStartOf="@+id/relUpcom"
                android:fontFamily="@font/roboto"
                android:textColor="#404040"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nurmukhamed Mykytybek The Legend" />

            <TextView
                android:id="@+id/textViewDateTimeUpcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doctorNameTextViewUpcom"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#80404040"
                android:textSize="14sp"
                tools:text="@string/_12_30" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/textViewDateTimeUpcom"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="#00BDD0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewUpcom"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:layout_below="@+id/view"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13sp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1A00BDD0"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cheque" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/chequeButtonUpcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/cardViewUpcom"
                android:fontFamily="@font/roboto_medium"
                android:padding="14sp"
                android:text="@string/receipt"
                android:textColor="#00BDD0"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>