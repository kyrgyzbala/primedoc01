<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="9dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="6dp"
    app:cardElevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/back_doctype">

            <TextView
                android:id="@+id/textViewDoctorTypeRowHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#00BDD0"
                android:textSize="12sp"
                tools:text="Терапевт" />

        </RelativeLayout>

        <TextView
            android:id="@+id/doctorNameTextViewHist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12sp"
            android:layout_toStartOf="@+id/relHist"
            android:fontFamily="@font/roboto"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nurmukhamed Mykytybek The Legend" />

        <TextView
            android:id="@+id/textViewDateTimeHist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctorNameTextViewHist"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#80404040"
            android:textSize="14sp"
            tools:text="@string/_12_30" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/textViewDateTimeHist"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#00BDD0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewHist"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_below="@+id/view"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13sp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1A00BDD0"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cheque" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chequeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:padding="14sp"
            android:layout_toEndOf="@+id/cardViewHist"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/receipt"
            android:textColor="#00BDD0"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>