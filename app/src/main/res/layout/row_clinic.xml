<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#14404040" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRowClinic"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgViewRowClinic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/def_doctor" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewTypeRowClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/cardViewRowClinic"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Therapeft" />

        <TextView
            android:id="@+id/textViewDescRowClinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTypeRowClinic"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="56dp"
            android:layout_toEndOf="@+id/cardViewRowClinic"
            android:fontFamily="@font/roboto"
            android:textColor="#80000000"
            android:textSize="14sp"
            tools:text="textgghfjakdla" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTypeRowClinic"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_arrow_forw" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>