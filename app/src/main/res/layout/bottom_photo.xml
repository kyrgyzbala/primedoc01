<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_pay_method">

    <TextView
        android:id="@+id/addPhotoPhoto"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/addPhoto"
        android:textColor="#00BDD0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewPhoto"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addPhotoPhoto"
        android:layout_marginStart="16sp"
        android:layout_marginTop="18sp"
        android:layout_marginEnd="16sp"
        android:background="#D8D8D8" />

    <TextView
        android:id="@+id/chooseFromGalleryPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPhoto"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="22sp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/chooseFromGallery"
        android:textColor="@color/colorDark"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>